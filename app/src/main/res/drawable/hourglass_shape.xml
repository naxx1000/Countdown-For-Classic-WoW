<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <corners
                    android:radius="5dp"
            />
            <gradient
                    android:angle="90"
                    android:type="linear"
                    android:endColor="@color/borderLight"
                    android:startColor="@color/borderDark" />
        </shape>
    </item>
    <item
            android:bottom="4dp"
            android:left="4dp"
            android:right="4dp"
            android:top="4dp">
        <shape>
            <corners
                    android:radius="5dp"
            />
            <solid
                    android:color="@color/black"
            />
        </shape>
    </item>
    <item
            android:bottom="6dp"
            android:left="6dp"
            android:right="6dp"
            android:top="6dp">
        <bitmap android:src="@drawable/hourglass4"
        />
    </item>
</layer-list>